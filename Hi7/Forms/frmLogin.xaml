                <EasingDoubleKeyFrame KeyTime="00:00:02.4000000" Value="-10"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02.6000000" Value="1.00"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02.8000000" Value="-10"/>
            </DoubleAnimationUsingKeyFrames>
